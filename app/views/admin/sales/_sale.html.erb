<tr>
  <td>
    <%= sale.name %>
  </td>
  <td>
    <%= sale.starts_on %>
  </td>
  <td>
    <%= sale.ends_on %>
  </td>
  <td>
 <!--   <span class="badge bg-success">Active</span>
    <span class="badge bg-danger">Inactive</span>
    <span class="badge bg-warning">Upcoming</span> -->
    <% if sale.finished? %>
      <span class="badge bg-danger">Inactive</span>
    <% elsif sale.upcoming? %>
      <span class="badge bg-warning">Upcoming</span>
    <% else %>
      <span class="badge bg-success">Active</span>
    <% end %>
  </td>
  <td>
    <%= sale.percent_off %> 
  </td>
  <td>
    <%= link_to fa_icon('trash'), [:admin, sale], class: "btn btn-sm btn-danger", method: :delete, data: { confirm: "Are you sure?" }  %>
  </td>
</tr>