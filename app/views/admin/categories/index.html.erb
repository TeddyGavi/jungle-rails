<section class="admin-categories">
  <header class="page-header">
    <h1>Admin &raquo; Categories</h1>
  </header>
  <p>
<% @categories.each do |c| %>
  <% if c.errors.any? %>
  <div class="alert alert-danger">
    <% c.errors.full_messages.each do |e|%>
    <div><%= e%></div>
    <% end %>
    <% end %>
  <% end %>
  </div>


    <%= link_to '+ Create New', [:new, :admin, :category], class: 'btn
    btn-info'%>
  </p>
  <table class="table table-success">
    <thead>
      <tr>
        <th>Category</th>
        <th>Remove</th>
        <th>Edit</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |c| %>

      <tr>
        <td><%= c.name %></td>
        <td>
          <%= link_to fa_icon('trash'), [:admin, c], class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
        </td>
        <td><%= link_to fa_icon('edit'), [:edit, :admin, c], class: 'btn-sm btn-warning' %></td>
        <% end %>
      </tr>
    </tbody>
  </table>
</section>
