<section class="admin-categories">
  <header class="page-header">
    <h1>Admin &raquo; Categories</h1>
  </header>
  <p>
    <%= link_to '+ Create New', [:admin, :categories, :new], class: 'btn
    btn-info'%>
  </p>
  <table class="table table-success">
    <thead>
      <tr>
        <th>Category</th>
        <th>Remove</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |c| %>
      <tr>
        <td><%= c.name %></td>
        <td>
          <%= link_to fa_icon('trash'), [:admin, c], class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
        </td>
        <% end %>
      </tr>
    </tbody>
  </table>
</section>
